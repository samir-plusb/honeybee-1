<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="true"
         backupStaticAttributes="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         forceCoversAnnotation="false"
         mapTestClassNameToCoveredClassName="false"
         processIsolation="false"
         stopOnError="false"
         stopOnFailure="false"
         stopOnIncomplete="false"
         stopOnSkipped="false"
         syntaxCheck="false"
         strict="false"
         verbose="false">
    <logging>
        <log type="coverage-html" target="../../etc/integration/build/coverage" title="ContentWorker" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="../../etc/integration/build/logs/clover.xml"/>
        <log type="junit" target="../../etc/integration/build/logs/phpunit.xml" logIncompleteSkipped="false"/>
    </logging>
    <filter>
        <whitelist>
            <directory suffix=".php">../../app/models</directory>
            <directory suffix=".php">../../app/modules/Import/</directory>
            <directory suffix=".php">../../testing/</directory>
            <exclude>
                <directory suffix="Success.php">../../app/</directory>
                <directory suffix="Input.php">../../app/</directory>
                <directory suffix="Error.php">../../app/</directory>
                <directory>../fixtures/</directory>
            </exclude>
        </whitelist>
    </filter>
</phpunit>