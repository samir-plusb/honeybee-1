<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/midas/config/datasource/definition/1.0"
    xmlns:env="http://berlinonline.de/schemas/midas/config/envelope/definition/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">
    <ae:configuration>
        <datasources>

            <datasource name="imperia" class="ImperiaDataSource">
                <description>Provides access to imperia-cms content via imperia's export-xml api.</description>
                <recordType>PoliceReportDataRecord</recordType>
                <settings>
                    <setting name="account_pass">P8TaamVVwOb4JGbPWtqwo</setting>
                    <setting name="account_user">bo-xml-export</setting>
                    <setting name="url">%news.imperia.base_url%</setting>
                </settings>
            </datasource>

            <datasource name="dpa" class="NewswireDataSource">
                <description>Provides access to the DPA messages.</description>
                <recordType>DpaNitfNewswireDataRecord</recordType>
                <settings>
                    <setting name="path">%news.import.newswire_dir%/dpa-BerlinBrandenburg/</setting>
                    <setting name="regexp">\.xml$</setting>
                    <setting name="timestamp_file">/var/tmp/dpa.time.stamp</setting>
                </settings>
            </datasource>

            <datasource name="rss" class="RssDataSource">
                <description>Provides access to a given rss feed.</description>
                <recordType>RssDataRecord</recordType>
                <settings>
                    <setting name="rss_url">http://ci.berlinonline.de/fixtures/rss/spiegel/rss.xml</setting>
                </settings>
            </datasource>

            <datasource name="procmail" class="ArrayDataSource">
                <description>Provides raw mime mail data, when it is pushed in by procmail.</description>
                <recordType>ImapDataRecord</recordType>
            </datasource>

            <datasource name="wkg" class="WkgDataSource">
                <description>Provides wkg location data coming from xml files.</description>
                <recordType>WkgDataRecord</recordType>
                <settings>
                    <setting name="directory">%core.app_dir%/../testing/fixtures/Shofi/import/wkg/</setting>
                    <setting name="file_pattern">^10195_\d{8,8}_00145\.xml$</setting>
                </settings>
            </datasource>

            <datasource name="prototype" class="ArrayDataSource">
                <description>Provides location data coming from the shofi prototype.</description>
                <recordType>PrototypeDataRecord</recordType>
            </datasource>

            <datasource name="prototype.category" class="ArrayDataSource">
                <description>Provides category data coming from the shofi prototype.</description>
                <recordType>PrototypeCategoryDataRecord</recordType>
            </datasource>

        </datasources>
    </ae:configuration>
</ae:configurations>