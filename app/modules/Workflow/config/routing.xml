<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/routing/1.0">

    <ae:configuration context="web">
        <routes>
            <route name=".run" pattern="^/run" action="Run"/>
            <route name=".proceed" pattern="^/proceed" action="Proceed"/>
            <route name=".grab" pattern="^/ticket/grab" action="GrabTicket" />
            <route name=".release" pattern="^/ticket/release" action="ReleaseTicket" />
        </routes>
    </ae:configuration>

    <ae:configuration context="console">
        <routes>
            <route pattern="workflow." module="Workflow">
                <route pattern="^run" action="Run" />
            </route>
        </routes>
    </ae:configuration>

</ae:configurations>