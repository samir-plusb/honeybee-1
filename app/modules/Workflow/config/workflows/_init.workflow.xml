<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://berlinonline.de/schemas/midas/workflow/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">
    <ae:configuration>
        <workflow name="Init">
            <description>This workflow will decide which workflow to run through one input element. The associated
                content element must not be changed in this workflow.</description>
            <steps start="is_news">
                <step id="is_news" name="Check for news item">
                    <plugin>Null</plugin>
                    <gates>
                        <gate workflow="news"></gate>
                    </gates>
                </step>
            </steps>
        </workflow>
    </ae:configuration>
</ae:configurations>
