<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://berlinonline.de/schemas/midas/workflow/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">
    <ae:configuration>
        <workflow name="news">
            <description>This workflow is for testing interactive workflows.</description>
            <start_at>news_refinement</start_at>
            <steps>
                <step name="news_refinement">
                    <description>Manually refine incoming import-items and create content-items from them.</description>
                    <plugin type="RefineNews">
                        <ae:parameters>
                            <ae:parameter name="foo">1</ae:parameter>
                        </ae:parameters>
                        <gates>
                            <gate name="delete">delete item</gate>
                            <gate name="promote">approval</gate>
                        </gates>
                    </plugin>
                </step>
            </steps>
        </workflow>
    </ae:configuration>
</ae:configurations>
