<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://berlinonline.de/schemas/midas/workflow/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">
    <ae:configuration>
        <workflow name="test_interactive">
            <description>This workflow is for testing interactive workflows.</description>
            <start_at>choose</start_at>
            <steps>
                <step name="choose">
                    <description>Choose a gate.</description>
                    <plugin>
                        <gates>
                            <gate name="promote">timewarp</gate>
                            <gate name="terminate" />
                        </gates>
                    </plugin>

                </step>
                
                <step name="timewarp">
                    <description>Back to the future!</description>
                    <plugin>null</plugin>
                    <gates>
                        <gate name="wormhole">choose</gate>
                    </gates>
                </step>
            </steps>
        </workflow>
    </ae:configuration>
</ae:configurations>