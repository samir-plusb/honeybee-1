<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://berlinonline.de/schemas/midas/workflow/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">
    <ae:configuration>
        <workflow name="test_interactive">
            <description>This workflow is for testing interactive workflows.</description>
            <start_at>choose</start_at>
            <steps>
                <step name="choose">
                    <description>Choose a gate.</description>
                    <plugin type="choose">
                        <ae:parameters>
                            <ae:parameter name="message">yay, i can haz choose termination</ae:parameter>
                        </ae:parameters>
                        <gates>
                            <gate_step name="promote" label="scotty, beam me up!">beamstation</gate_step>
                            <gate_end name="terminate" label="eow - end of workflow" />
                        </gates>
                    </plugin>

                </step>

                <step name="beamstation">
                    <description>Back to the future!</description>
                    <plugin type="null">
                        <gates>
                            <gate_step name="promote" label="back to the roots">choose</gate_step>
                        </gates>
                    </plugin>
                </step>
            </steps>
        </workflow>
    </ae:configuration>
</ae:configurations>