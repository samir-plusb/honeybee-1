<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/User/config/validators.xml">

    <ae:configuration>

        <validators translation_domain="user.messages">
            <validator source="headers" class="RedirectValidator" name="valid_redirect_referer" severity="silent" required="false">
                <argument>REFERER</argument>
            </validator>
        </validators>

        <validators method="write" translation_domain="user.messages">
            <validator class="string">
                <argument>username</argument>
                <ae:parameter name="min">3</ae:parameter>
                <ae:parameter name="max">100</ae:parameter>
                <error>The username is either missing or invalid.</error>
            </validator>

            <validator class="string" translation_domain='user.messages'>
                <argument>password</argument>
                <ae:parameter name="min">7</ae:parameter>
                <ae:parameter name="max">200</ae:parameter>
                <error>The password is either missing or invalid.</error>
            </validator>

        </validators>

        <validators method="read" translation_domain="user.messages">
            <validator class="string" required="false">
                <argument>username</argument>
                <ae:parameter name="min">3</ae:parameter>
                <ae:parameter name="max">100</ae:parameter>
                <error>The username is invalid.</error>
            </validator>

            <validator class="string" required="false">
                <argument>password</argument>
                <ae:parameter name="min">7</ae:parameter>
                <ae:parameter name="max">200</ae:parameter>
                <error>The password is invalid.</error>
            </validator>

        </validators>

    </ae:configuration>

</ae:configurations>
