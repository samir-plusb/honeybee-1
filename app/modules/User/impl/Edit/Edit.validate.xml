<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/User/config/validators.xml">
    <ae:configuration context="web">
        <validators method="read">
            <validator class="UserDocumentValidator" name="invalid_user_" required="false">
                <arguments>
                    <argument>id</argument>
                </arguments>
            </validator>
        </validators>

        <validators method="write" translation_domain="user.errors">
            <validator class="UserDocumentValidator" name="invalid_user" required="false">
                <arguments>
                    <argument>user</argument>
                </arguments>
                <error for="invalid_values">The value '%value$s' given for field '%fieldname$s' does not comply.</error>
                <error for="missing_mandatory_values">Missing required value for field '%fieldname$s'</error>
            </validator>
        </validators>
    </ae:configuration>

    <ae:configuration context="console" translation_domain="user.errors">
        <validators method="write">
            <validator class="UserDocumentValidator" name="invalid_user" required="true">
                <arguments>
                    <argument>username</argument>
                    <argument>email</argument>
                </arguments>
                <error for="invalid_values">The value '%value$s' given for field '%fieldname$s' does not comply.</error>
                <error for="missing_mandatory_values">Missing required value for field '%fieldname$s'</error>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>