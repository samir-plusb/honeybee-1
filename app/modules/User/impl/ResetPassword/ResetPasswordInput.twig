{% set errors = errors ? errors : [] %}
{% if errors is defined %}
    <span style="display: inline-block; margin-bottom: 2em;" class="label label-important">{{ errors }}</span>
{% endif %}
<div class="container wrapper">
    <form class="well" action="{{ro.gen(NULL)}}" method="post" style="margin-top: 20%;">
        <fieldset>
            <legend>{{tm._('Please enter your email or username','user.ui')}}:</legend>
            <div class="control-group">
                <label for="user_input" class="control-label">Username</label>
                <input type="text" id="user_input" name="username" placeholder="{{ tm._('superman','user.ui') }}" />
            </div>
            <div class="control-group">
                <label for="email_input" class="control-labal">Email</label>
                <input id="email_input" type="text" name="email" placeholder="{{ tm._('clark@kent.org','user.ui') }}" />
            </div>
            <button style="display: block;" type="submit" class="btn btn-primary"> {{tm._('Reset','user.ui') }}</button>
        </fieldset>
    </form>
</div>
