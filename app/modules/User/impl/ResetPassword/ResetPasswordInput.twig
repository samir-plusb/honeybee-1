{% set errors = errors ? errors : [] %}
<div class="container wrapper">
    {% if errors is defined %}
    <div class="errors">
        {% for error in errors %}
        <div class="alert alert-error">
            <button type="button" class="close" data-dismiss="alert">&#215;</button>
            {{ error }}
        </div>
        {% endfor %}
    </div>
    {% endif %}
    <form class="form-reset well form-horizontal" action="{{ro.gen(NULL)}}" method="post" style="margin-top: 20%;">
        <fieldset>
            <legend>{{tm._('Reset password','user.ui')}}</legend>
            <div class="control-group" style="margin-bottom: 5px;">
                <label for="user_input" class="control-label">{{ tm._('Username','user.ui') }}</label>
                <div class="controls input-prepend">
                    <label for="user_input" class="add-on hb-icon-user">&#8203;</label>
                    <input type="text" id="user_input" name="username" placeholder="{{ tm._('clark.kent','user.ui') }}" />
                </div>
            </div>
            <b style="display: inline-block; margin-left: 10%; margin-bottom: 10px">oder</b>
            <div class="control-group">
                <label for="email_input" class="control-label">{{ tm._('Email','user.ui') }}</label>
                <div class="controls input-prepend">
                    <label for="email_input" class="add-on hb-icon-envelope">&#8203;</label>
                    <input id="email_input" type="text" name="email" placeholder="{{ tm._('clark@kent.org','user.ui') }}" />
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button style="display: block;" type="submit" class="btn btn-primary"> {{tm._('Reset password','user.ui') }}</button>
                </div>
            </div>
        </fieldset>
    </form>
</div>
