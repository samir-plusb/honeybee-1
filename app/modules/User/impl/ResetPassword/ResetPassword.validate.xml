<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/User/config/validators.xml">
    <ae:configuration>
        <validators method="write">

            <validator class="or" name="invalid_account_info" translation_domain='user.messages' required="true">
                <validators>
                    <validator class="string" name="invalid_username" required="false">
                        <argument>username</argument>
                    </validator>

                    <validator class="email" name="invalid_email" required="false">
                        <argument>email</argument>
                    </validator>
                </validators>
                <error>Invalid or missing account info.</error>
            </validator>

        </validators>
    </ae:configuration>
</ae:configurations>
