<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations 
    xmlns="http://agavi.org/agavi/config/parts/databases/1.0" 
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <ae:configuration>
        <databases default="User.Write">
            <!-- Repository write connection (storage) -->
            <database name="User.Write" class="Honeybee\Agavi\Database\CouchDb\Database">
                <ae:parameter name="url">http://127.0.0.1:5984/</ae:parameter>
                <ae:parameter name="database">%core.project_prefix%_%core.environment%_user</ae:parameter>
                <ae:parameter name="setup">true</ae:parameter>
                <ae:parameter name="scripts_dir">%core.modules_dir%/User/config/couchdb/</ae:parameter>
            </database>

            <!-- Repository read connection (finder) -->
            <database name="User.Read" class="Honeybee\Agavi\Database\ElasticSearch\Database">
                <ae:parameter name="host">127.0.0.1</ae:parameter>
                <ae:parameter name="port">9200</ae:parameter>
                <ae:parameter name="transport">Http</ae:parameter>
                <ae:parameter name="index">%core.project_prefix%_%core.environment%_user</ae:parameter>
                <ae:parameter name="setup">true</ae:parameter>
                <ae:parameter name="mapping_dir">%core.modules_dir%/User/config/elasticsearch/</ae:parameter>
                <ae:parameter name="river">
                    <ae:parameter name="couch_db">%core.project_prefix%_%core.environment%_user</ae:parameter>
                </ae:parameter>
            </database>
        </databases>
    </ae:configuration>
</ae:configurations>
