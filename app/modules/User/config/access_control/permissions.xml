<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/honeybee/config/access_control/1.0" 
    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0" 
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">
    <ae:configuration>
        <roles>
            <!-- 
                Defines which resource actions actions may be executed by the default editor.
                
                :INFO: 
                Atm this is restricted for providing permission to for the default role only.
                This will change extremely when we reach the iterations,
                that have their main focus on the acl configuration.
                Most probally then this file will be removed in the favour of a db driven management
                with a fancy UI.
            -->
            <role name="default-permissions">
                <acl>
                    <grant>user::read</grant>
                    <grant>user::write</grant>
                    <grant>user::create</grant>

                    <!-- edit state perms -->
                    <grant>user.edit::read</grant>
                    <grant>user.edit::write</grant>
                    <grant>user.edit::promote</grant>
                    <grant>user.edit::delete</grant>
                    <!-- <grant if="user_is_item_owner">user.edit::write</grant> -->

                    <!-- delete state perms -->
                    <grant>user.delete::write</grant>
                    
                    <!-- publish state perms -->
                    <grant>user.publish::write</grant>

                    <!-- published state perms -->
                    <grant>user.published::read</grant>
                    <grant>user.published::write</grant>
                    <grant>user.published::promote</grant>
                    <grant>user.published::demote</grant>
                    <grant>user.published::delete</grant>
                    <!-- <grant if="user_is_item_owner">user.published::write</grant> -->

                    <!-- archive state perms -->
                    <grant>user.archive::write</grant>

                    <!-- archived state perms -->
                    <grant>user.archived::read</grant>
                    <grant>user.archived::write</grant>
                    <grant>user.archived::promote</grant>
                    <grant>user.archived::demote</grant>
                    <grant>user.archived::delete</grant>
                    <!-- <grant if="user_is_item_owner">user.archived::write</grant> -->
                </acl>
            </role>
        </roles>
    </ae:configuration>
</ae:configurations>