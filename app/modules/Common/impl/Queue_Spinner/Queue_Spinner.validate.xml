<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.config_dir%/validators.xml">
    <ae:configuration>
        <validators>

            <validator class="number" name="invalid_size" required="false">
                <arguments>
                    <argument>size</argument>
                </arguments>
                <errors>
                    <error>The provided pool 'size' must be an integer.</error>
                    <error for="type">The provided pool size must be an integer.</error>
                    <error for="min">You need at least one worker.</error>
                    <error for="max">Max allowed number over workers is 100.</error>
                </errors>
            </validator>

            <validator class="string" name="invalid_queue" required="false">
                <arguments>
                    <argument>queue</argument>
                </arguments>
                <errors>
                    <error>Invalid or missing 'queue' parameter.</error>
                </errors>
            </validator>

            <validator class="inarray" name="invalid_action" required="false">
                <arguments>
                    <argument>action</argument>
                </arguments>
                <ae:parameters>
                    <ae:parameter name="values">
                        <ae:parameter>restart</ae:parameter>
                        <ae:parameter>start</ae:parameter>
                        <ae:parameter>status</ae:parameter>
                        <ae:parameter>stop</ae:parameter>
                    </ae:parameter>
                </ae:parameters>
                <errors>
                    <error>Invalid or missing 'action' parameter.</error>
                </errors>
            </validator>

        </validators>
    </ae:configuration>
</ae:configurations>