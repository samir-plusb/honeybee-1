<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/midas/config/datasource/definition/1.0"
    xmlns:env="http://berlinonline.de/schemas/midas/config/envelope/definition/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">

    <ae:configuration>
        <datasources>

            <datasource name="events-tip" class="TipEventsXmlDataSource">
                <description>Provides movie data coming from the tip-events xml import.</description>
                <recordType>TipEventsXmlDataRecord</recordType>
                <settings>
                    <setting name="schema">%core.app_dir%/../data/catalogs/schemas/eventx/tip_berlinonline.xsd</setting>
                    <setting name="source_directory">%core.app_dir%/../data/catalogs/eventx/</setting>
                    <setting name="people_catalog">%core.app_dir%/../data/catalogs/eventx/person-export.xml</setting>
                    <setting name="locations_catalog">%core.app_dir%/../data/catalogs/eventx/adressen-export.xml</setting>
                    <setting name="articles_catalog">%core.app_dir%/../data/catalogs/eventx/artikel-export.xml</setting>
                    <setting name="files">
                        <setting>%core.app_dir%/../data/catalogs/eventx/ausstellung-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/buehne-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/fest-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/film-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/fuehrung-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/handel-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/information-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/kunst-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/literatur-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/mode-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/musik-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/sonstige-export.xml</setting>
                        <setting>%core.app_dir%/../data/catalogs/eventx/sport-export.xml</setting>
                    </setting>
                </settings>
            </datasource>

        </datasources>
    </ae:configuration>
</ae:configurations>