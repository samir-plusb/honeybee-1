{
    "index_analyzer": "default",
    "search_analyzer": "default",
    "dynamic" : false,
    "_source": {
        "enabled": true
    },
    "properties": {
        "created": {
            "include_in_all": false,
            "properties": {
                "user": {
                    "type": "string",
                    "store": true
                },
                "date": {
                    "type": "date",
                    "format": "date_time_no_millis",
                    "store": true
                }
            }
        },
        "lastModified": {
            "include_in_all": false,
            "properties": {
                "user": {
                    "type": "string",
                    "store": true
                },
                "date": {
                    "type": "date",
                    "format": "date_time_no_millis",
                    "store": true
                }
            }
        },
        "origin": {
            "type": "multi_field",
            "fields": {
                "origin": {
                    "type": "string",
                    "store": true
                },
                "raw": {
                    "type": "string",
                    "index": "not_analyzed",
                    "store": true
                }
            }
        },
        "name": {
            "type": "string",
            "store": true
        },
        "extension": {
            "type": "string"
        },
        "size": {
            "type": "integer",
            "store": true
        },
        "mimeType": {
            "type": "string",
            "store": true
        },
        "metaData": {
            "type": "object",
            "store": true
        }
    }
}
