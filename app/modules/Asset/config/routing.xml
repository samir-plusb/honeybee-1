<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0" xmlns="http://agavi.org/agavi/config/parts/routing/1.0">

    <ae:configuration context="web">
        <routes>
            <route name=".get" pattern="^/get" action="Get" />
            <route name=".binary" pattern="^/binary" action="Binary" output_type="binary"/>
            <route name=".put" pattern="^/put" action="Put" />
            <route name=".delete" pattern="^/delete" action="Delete" />
            <route name=".update" pattern="^/update" action="Update" />
            <route name=".thumbnail" pattern="^/thumbnail" action="Thumbnail" output_type="binary" />
        </routes>
    </ae:configuration>

    <ae:configuration context="console">
        <routes>
            <route pattern="get" action="Get" method="read" />
            <route pattern="put" action="Put" method="write" />
            <route pattern="delete" action="Delete" method="write" />
            <route pattern="update" action="Update" method="write" />
        </routes>
    </ae:configuration>

</ae:configurations>
