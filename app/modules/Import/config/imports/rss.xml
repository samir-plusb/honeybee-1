<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://berlinonline.de/schemas/midas/config/import/definition/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">

    <ae:configuration>
        <import class="CouchDbDataImport">
            <name>RSS-Test</name>
            <description>Test (rss)-to->(couchdb) imports.</description>

            <settings>
                <setting name="couchdb_host">%couchdb.import.host%</setting>
                <setting name="couchdb_port">%couchdb.import.port%</setting>
                <setting name="couchdb_database">%couchdb.import.database%</setting>
            </settings>

            <datasource class="RssDataSource" record="RssDataRecord">
                <name>Rss</name>
                <description>Provides access to a given rss feed.</description>

                <settings>
                    <setting name="rss_url">http://www.spiegel.de/schlagzeilen/index.rss</setting>
                </settings>
            </datasource>
        </import>

    </ae:configuration>
</ae:configurations>
