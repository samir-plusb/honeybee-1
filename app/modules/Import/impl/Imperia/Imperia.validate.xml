<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://agavi.org/agavi/config/parts/validators/1.1" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" parent="%core.module_dir%/Import/config/validators.xml">
    <ae:configuration>
        <validators>
            
            <validator class="ImportConfigFileValidator" name="invalid_config" required="true">
                <arguments>
                    <argument>c</argument>
                </arguments>
                <errors>
                    <error>Please provide a config name.</error>
                    <error for="non_existant">The given config does not exist.</error>
                    <error for="parse_error">The given config is not parseable.</error>
                </errors>
                <ae:parameters>
                    <ae:parameter name="pop_parse_errors">false</ae:parameter>
                </ae:parameters>
            </validator>
            
        </validators>
    </ae:configuration>
    
    <ae:configuration environment="development*">
        <validators>
            
            <validator class="ImportConfigFileValidator" name="invalid_config" required="true">
                <arguments>
                    <argument>c</argument>
                </arguments>
                <errors>
                    <error>Please provide a config name.</error>
                    <error for="non_existant">The given config does not exist.</error>
                    <error for="parse_error">The given config is not parseable.</error>
                </errors>
                <ae:parameters>
                    <ae:parameter name="pop_parse_errors">true</ae:parameter>
                </ae:parameters>
            </validator>
            
        </validators>
    </ae:configuration>
</ae:configurations>