<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.1"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1"
    parent="%core.module_dir%/Shofi_Verticals/config/validators.xml">
    <ae:configuration>
        <validators>

            <validator class="string" name="invalid_search_phrase" required="false">
                <arguments>
                    <argument>search_phrase</argument>
                </arguments>
                <ae:parameters>
                    <ae:parameter name="min">3</ae:parameter>
                    <ae:parameter name="max">50</ae:parameter>
                </ae:parameters>
                <errors>
                    <error for="min">The search_phrase must be at least 3 chars long.</error>
                    <error for="max">The search_phrase may not exceed a length of 50 chars.</error>
                </errors>
            </validator>

            <validator class="ProjectArrayValidator" name="invalid_filter" required="false">
                <arguments>
                    <argument>filter</argument>
                </arguments>
            </validator>

            <validator class="number" name="invalid_offset" required="false" >
                <arguments>
                    <argument>offset</argument>
                </arguments>
                <ae:parameters>
                    <ae:parameter name="min">0</ae:parameter>
                </ae:parameters>
                <errors>
                    <error for="min">The offset must be at least 0.</error>
                </errors>
            </validator>

            <validator class="number" name="invalid_limit" required="false" >
                <arguments>
                    <argument>limit</argument>
                </arguments>
                <ae:parameters>
                    <ae:parameter name="min">0</ae:parameter>
                </ae:parameters>
                <errors>
                    <error for="min">The limit must be at least 0.</error>
                </errors>
            </validator>

            <validator class="inarray" name="invalid_sorting_direction" required="false" >
                <arguments base="sorting">
                    <argument>direction</argument>
                </arguments>
                <ae:parameters>
                    <ae:parameter name="values">asc,desc</ae:parameter>
                    <ae:parameter name="sep">,</ae:parameter>
                </ae:parameters>
            </validator>

            <validator class="string" name="invalid_sorting_field" required="false" >
                <arguments base="sorting">
                    <argument>field</argument>
                </arguments>
            </validator>

        </validators>
    </ae:configuration>
</ae:configurations>