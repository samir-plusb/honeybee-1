<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/midas/config/datasource/definition/1.0"
    xmlns:env="http://berlinonline.de/schemas/midas/config/envelope/definition/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">

    <ae:configuration>
        <datasources>

            <datasource name="verticals-catalog" class="ShofiVerticalsJsonDataSource">
                <description>Provides vertical data coming from a json catalog.</description>
                <recordType>ShofiVerticalsJsonDataRecord</recordType>
                <settings>
                    <setting name="filepath">%core.app_dir%/../data/catalogs/verticals.json</setting>
                </settings>
            </datasource>

        </datasources>
    </ae:configuration>
</ae:configurations>