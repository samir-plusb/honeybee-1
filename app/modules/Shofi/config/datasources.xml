<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/midas/config/datasource/definition/1.0"
    xmlns:env="http://berlinonline.de/schemas/midas/config/envelope/definition/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">

    <ae:configuration>
        <datasources>

            <datasource name="places-wkg" class="WkgDataSource">
                <description>Provides wkg location data coming from xml files.</description>
                <recordType>WkgDataRecord</recordType>
                <settings>
                    <setting name="directory">%core.app_dir%/../data/wkg/</setting>
                    <setting name="file_pattern">^10195_\d{8,8}_00145\.xml$</setting>
                </settings>
            </datasource>

            <datasource name="theaters-telavision" class="TelavsionTheaterDataSource">
                <description>Provides theater data coming from the shofi/theater import directory as xml files.</description>
                <recordType>TelavsionTheaterDataRecord</recordType>
                <settings>
                    <setting name="file_path">%core.app_dir%/../data/catalogs/movies/telavision/kino.xml</setting>
                </settings>
            </datasource>

            <datasource name="hotels-btk" class="BtkHotelDataSource">
                <description>Provides hotel data coming from the shofi/hotel import directory as xml files.</description>
                <recordType>BtkHotelDataRecord</recordType>
                <settings>
                    <setting name="file_path">%core.app_dir%/../data/catalogs/hotels/hotels.xml</setting>
                </settings>
            </datasource>

            <datasource name="hotels-gdoc" class="GdocHotelDataSource">
                <description>Provides hotel data coming from the shofi/hotels google docs spreadsheet.</description>
                <recordType>GdocHotelDataRecord</recordType>
                <settings>
                    <setting name="doc_id">0AiVrBh5tuXpndDFlWTcwd3RVR2gwWUtOVlJDZ2tuWFE</setting>
                    <setting name="email">bonline.hotel.import@googlemail.com</setting>
                    <setting name="password">klbo09;A</setting>
                </settings>
            </datasource>

            <datasource name="places-eventx" class="EventXPlacesDataSource">
                <description>Provides places data coming from TIP's event(x) export interface.</description>
                <recordType>EventXPlacesDataRecord</recordType>
                <settings>
                    <setting name="schema">%core.app_dir%/../data/catalogs/schemas/eventx/tip_berlinonline.xsd</setting>
                    <setting name="source_directory">%core.app_dir%/../data/catalogs/eventx/</setting>
                    <setting name="files">
                        <setting>%core.app_dir%/../data/catalogs/eventx/adressen-export.xml</setting>
                    </setting>
                </settings>
            </datasource>

            <datasource name="restaurants-tip" class="TipRestaurantDataSource">
                <description>Provides places data coming from TIP's restaurant export interface.</description>
                <recordType>TipRestaurantDataRecord</recordType>
                <settings>
                    <setting name="file_path">%shofi.tip_import_dir%/gastro.xml</setting>
                </settings>
            </datasource>
        </datasources>
    </ae:configuration>
</ae:configurations>