<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/routing/1.0">

    <ae:configuration context="web">
        <routes>
            <!-- web views -->
            <route name=".config" pattern="/config" action="Config" />
            <route name=".list" pattern="/list" action="List" method="read" />
            <route name=".edit" pattern="/edit" action="Edit" />
            <route name=".api.localize" pattern="/api/localize" action="Api_Localize" />
        </routes>
    </ae:configuration>

    <ae:configuration context="console">
        <routes>
            <route pattern="shofi.link-r4" module="Shofi" action="LinkR4" method="write" />
            <route pattern="shofi.update-categories" module="Shofi" action="UpdateCategories" method="write" />
            <route pattern="shofi.fixdata" module="Shofi" action="FixData" method="write" />
            <route pattern="shofi.mark-duplicates" module="Shofi" action="MarkDuplicates" method="write" />
        </routes>
    </ae:configuration>

</ae:configurations>