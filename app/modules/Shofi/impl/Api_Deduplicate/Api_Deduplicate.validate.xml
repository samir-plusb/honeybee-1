<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
	parent="%core.module_dir%/Shofi/config/validators.xml">

    <ae:configuration>

        <validators>
            <validator class="string" name="invalid_item_id" required="false">
                <arguments>
                    <argument>item_id</argument>
                </arguments>
                <errors>
                    <error>You must supply a valid item_ud parameter.</error>
                </errors>
            </validator>
        </validators>

    </ae:configuration>

</ae:configurations>