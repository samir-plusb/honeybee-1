<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.1"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1"
    parent="%core.module_dir%/Shofi/config/validators.xml"
>

    <ae:configuration>

        <validators>
            <validator class="string" name="invalid_filename" required="true">
                <arguments>
                    <argument>filename</argument>
                </arguments>
                <errors>
                    <error>You must supply a valid filename parameter.</error>
                </errors>
            </validator>
        </validators>

    </ae:configuration>

</ae:configurations>