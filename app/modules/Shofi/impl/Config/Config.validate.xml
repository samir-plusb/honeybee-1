<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
	xmlns="http://agavi.org/agavi/config/parts/validators/1.1"
	xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1"
	parent="%core.module_dir%/Shofi/config/validators.xml">
    <ae:configuration>
        <validators>
            <validator class="string" name="invalid_category" translation_domain="shofi.errors" method="write">
                <arguments>
                    <argument>category</argument>
                </arguments>
                <errors>
                    <error>Invalid (etxernal) category name given.</error>
                </errors>
            </validator>

            <validator class="ProjectArrayValidator" name="invalid_mapping" translation_domain="shofi.errors" method="write" required="false">
                <arguments>
                    <argument>mappings</argument>
                </arguments>
                <errors>
                    <error>Invalid mappings given.</error>
                </errors>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>