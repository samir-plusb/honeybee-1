<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.1"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1"
    parent="%core.module_dir%/Shofi/config/validators.xml">
    <ae:configuration>
        <validators>
            <validator class="WorkflowTicketValidator" name="invalid_ticket" required="false" translation_domain="shofi.errors">
                <arguments>
                    <argument>ticket</argument>
                </arguments>
                <errors>
                    <error>Invalid data given.</error>
                </errors>
                <ae:parameters>
                    <ae:parameter name="type">shofi</ae:parameter>
                </ae:parameters>
            </validator>

            <validator class="inarray" name="invalid_page" required="false" translation_domain="shofi.errors">
                <arguments>
                    <argument>_page</argument>
                </arguments>
                <ae:parameters>
                    <ae:parameter name="values">CoreItem,SalesItem,DetailItem</ae:parameter>
                    <ae:parameter name="sep">,</ae:parameter>
                </ae:parameters>
                <errors>
                    <error for="min">The search_phrase must be at least 3 chars long.</error>
                    <error for="max">The search_phrase may not exceed a length of 50 chars.</error>
                </errors>
            </validator>
        </validators>

        <validators method="write">
            <validator class="ProjectArrayValidator" name="invalid_attributes" required="false" translation_domain="shofi.errors">
                <arguments>
                    <argument>attributes</argument>
                </arguments>
            </validator>

            <validator class="or" name="invalid_item_data" required="true" translation_domain="shofi.errors">
                <validator class="ShofiCoreItemValidator" name="invalid_core_item" required="false">
                    <arguments>
                        <argument>coreItem</argument>
                    </arguments>
                </validator>

                <validator class="ShofiDetailItemValidator" name="invalid_detail_item" required="false" translation_domain="shofi.errors">
                    <arguments>
                        <argument>detailItem</argument>
                    </arguments>
                </validator>

                <validator class="ShofiSalesItemValidator" name="invalid_sales_item" required="false" translation_domain="shofi.errors">
                    <arguments>
                        <argument>salesItem</argument>
                    </arguments>
                </validator>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>
