<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/Shofi/config/validators.xml">
    <ae:configuration>
        <validators>

            <validator class="string" name="invalid_csv_filename" required="true">
                <arguments>
                    <argument>csvfile</argument>
                </arguments>
                <errors>
                    <error>Invalid csvfile given.</error>
                </errors>
            </validator>

            <validator class="inarray" name="invalid_type_prefix" required="true">
                <arguments>
                    <argument>prefix</argument>
                </arguments>
                <errors>
                    <error>Invalid (type) prefix given.</error>
                </errors>
                <ae:parameters>
                    <ae:parameter name="sep">,</ae:parameter>
                    <ae:parameter name="values">hotels-gdoc,hotels-btk,restaurants-tip,theaters-telavision</ae:parameter>
                </ae:parameters>
            </validator>

        </validators>
    </ae:configuration>
</ae:configurations>