<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://agavi.org/agavi/config/parts/validators/1.1" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" parent="%core.module_dir%/Import/config/validators.xml">

    <ae:configuration>

        <validators>
            <validator class="string" name="invalid_id" required="true">
                <arguments>
                    <argument>id</argument>
                </arguments>
                <errors>
                    <error>Invalid id given.</error>
                </errors>
            </validator>

            <validator class="inarray" name="invalid_type" required="true">
                <arguments>
                    <argument>type</argument>
                </arguments>
                <errors>
                    <error>Invalid type given.</error>
                </errors>
                <ae:parameters>
                    <ae:parameter name="values">category,place</ae:parameter>
                    <ae:parameter name="sep">,</ae:parameter>
                </ae:parameters>
            </validator>
        </validators>
    </ae:configuration>

</ae:configurations>