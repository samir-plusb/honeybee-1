<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://berlinonline.de/schemas/midas/workflow/1.0" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">
    <ae:configuration>
        <workflow name="shofi_categories">
            <description>
                This workflow defines the process structure for editing/refining created/imported shofi categories.
            </description>
            <start_at>edit_category</start_at>
            <steps>

                <step name="edit_category">
                    <description>Manually edit a shofi category and create content-item(s) from it.</description>
                    <plugin type="EditShofiCategory">
                        <gates>
                            <gate_step label="delete this category" name="delete">delete_category</gate_step>
                        </gates>
                    </plugin>
                </step>

                <step name="delete_category">
                    <description>
                        Marks a given shofi category as deleted.
                        During a configurable time period the item(place) can then be recovered,
                        before being removed by the system's maintenance.
                    </description>
                    <plugin type="DeleteShofiCategory">
                        <gates>
                            <gate_end name="trash" />
                        </gates>
                    </plugin>
                </step>

            </steps>
        </workflow>
    </ae:configuration>
</ae:configurations>
