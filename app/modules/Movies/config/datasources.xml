<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://berlinonline.de/schemas/midas/config/datasource/definition/1.0"
    xmlns:env="http://berlinonline.de/schemas/midas/config/envelope/definition/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">

    <ae:configuration>
        <datasources>

            <datasource name="movies-telavision" class="MoviesXmlDataSource">
                <description>Provides movie data coming from the movies xml import.</description>
                <recordType>MoviesXmlDataRecord</recordType>
                <settings>
                    <setting name="file_path">%movies.telavision_dir%/film.xml</setting>
                    <setting name="screenings_file_path">%movies.telavision_dir%/spielzeit.xml</setting>
                </settings>
            </datasource>

        </datasources>
    </ae:configuration>
</ae:configurations>