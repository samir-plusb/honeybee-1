<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/routing/1.0">

    <ae:configuration context="web">
        <routes>
            <route name=".list" pattern="^/list" action="List"/>
            <route name=".stats" pattern="^/stats" action="Stats"/>
            <route name=".api" pattern="^/api">
                <route name=".delete_item" pattern="^/delete_item" action="Api_DeleteItem"/>
                <route name=".items_nearby" pattern="^/items_nearby" action="Api_FetchNearByItems"/>
                <route name=".extract_location" pattern="^/extract_location" action="Api_ExtractLocation"/>
                <route name=".extract_date" pattern="^/extract_date" action="Api_ExtractDate"/>
                <route name=".next_item" pattern="^/next_item" action="Api_NextItem"/>
                <route name=".prev_item" pattern="^/prev_item" action="Api_PrevItem"/>
            </route>
        </routes>
    </ae:configuration>

    <ae:configuration context="console">
        <routes>
            <route pattern="items." module="Items">
                <route pattern="setup" action="Setup" method="write"/>
            </route>
        </routes>
    </ae:configuration>

</ae:configurations>