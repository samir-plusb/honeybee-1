<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/routing/1.0">

    <ae:configuration context="web">
        <routes>
            <route name=".list" pattern="^/list" action="List"/>
            <route name=".edit" pattern="^/edit" action="Edit"/>
            <route name=".api" pattern="^/api">
                <route name=".localize" pattern="^/localize" action="Api_Localize"/>
                <route name=".extract_date" pattern="^/extract_date" action="Api_ExtractDate"/>
            </route>
        </routes>
    </ae:configuration>

    <ae:configuration context="console">
        <routes>
            <route pattern="items." module="Items">
                <route pattern="setup" action="Setup" method="write"/>
            </route>
        </routes>
    </ae:configuration>

</ae:configurations>