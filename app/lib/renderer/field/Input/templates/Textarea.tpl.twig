<div class="control-group field-wrapper-{{ fieldName }} {% if mandatory == true %}mandatory{% endif %}">
{% if field.getOption('use_richtext') %}
    {% if render_label == true %}
    <label class="control-label" for="{{ fieldId }}">
        {{ tm._(fieldKey, td)|raw}}
        {% if mandatory == true %}
        <span class="mandatory-marker">*</span>
        {% endif %}
    </label>
    {% endif %}
    <textarea dir="auto" name="{{ inputName }}" id="{{ fieldId }}" placeholder="{{ placeholder }}" class="ckeditor"
        {% if true == readonly %} disabled="disabled" {% endif %}>{{fieldValue}}</textarea>
{% elseif field.getOption('use_markdown') %}
    {% if render_label == true %}
    <label class="control-label" for="{{ fieldId }}">
        {{ tm._(fieldKey, td)|raw}}
        {% if mandatory == true %}
        <span class="mandatory-marker">*</span>
        {% endif %}
    </label>
    {% endif %}
    <div class="controls markdown-box honeybee-widget widget-markdown-widget" data-markdown-widget-options="{{ widgetOptions|raw }}">
        <textarea type="text" class="span11 field-textarea textarea-{{ fieldName }}" name="{{ inputName }}" id="{{ fieldId }}"
            placeholder="{{ placeholder }}" class="input-xlarge"
            {% if true == readonly %} readonly="readonly" {% endif %}>{{ fieldValue }}</textarea>
        <div class="span11 epic-editor" id="markdown-{{ fieldId }}"></div>
    </div>
{% else %}
    <label class="control-label" for="{{ fieldId }}">
        {{ tm._(fieldKey, td)|raw}}
        {% if mandatory == true %}
        <span class="mandatory-marker">*</span>
        {% endif %}
    </label>
    <div class="controls mdedit-{{ fieldId }}">
        <textarea dir="auto" type="text" class="span11 field-textarea textarea-{{ fieldName }}" name="{{ inputName }}" id="{{ fieldId }}"
            placeholder="{{ placeholder }}" class="input-xlarge"
            {% if true == readonly %} readonly="readonly" {% endif %}>{{ fieldValue }}</textarea>
    </div>
{% endif %}
    {% if tm._(fieldKey ~ '_help', td) != fieldKey ~ '_help' %}
    <span class="hb-icon-info help-trigger"
        {% if tm._(fieldKey ~ '_help_title', td) == fieldKey ~ '_help_title' %}
        data-title="{{ tm._('field_level_help') }}"
        {% else %}
        data-title="{{ tm._(fieldKey ~ '_help_title', td) }}"
        {% endif %}
        data-content="{{ tm._(fieldKey ~ '_help', td) }}"
        data-animation="false" data-placement="left" data-trigger="manual" data-html="true"  />
    {% endif %}
</div>
