<div class="control-group field-wrapper-{{ fieldName }} {% if mandatory == true %}mandatory{% endif %}">
    <label class="control-label" for="{{ fieldId }}">
        {{ tm._(fieldKey, td)|raw}}
        {% if mandatory == true %}
        <span class="mandatory-marker">*</span>
        {% endif %}
    </label>
    <div class="controls">
        {% if true == readonly %}
        <input type="hidden" name="{{ inputName }}" value="{{ fieldValue }}" />
        {% endif %}
        <select name="{{ inputName }}" id="{{ fieldId }}" title="{{ placeholder }}" class="span11"
            {% if true == readonly %} readonly="readonly" disabled="disabled" {% endif %}
            {% if mandatory == true %}aria-required="true"{% endif %}
            {% if multiple == true %}multiple="multiple"{% endif %}>
            <option value=""></option>
            {% for option, label in select_options %}
            <option
                {% if option == fieldValue %} selected="selected" {% endif %}
                {% if option in disabled_options %} disabled="disabled" {% endif %}
                value="{{ option }}">{{ label }}
            </option>
            {% endfor %}
        </select>
        {% if tm._(fieldName ~ '_help', td) != fieldName ~ '_help' %}
        <span class="hb-icon-info help-trigger"
            {% if tm._(fieldKey ~ '_help_title', td) == fieldKey ~ '_help_title' %}
            data-title="{{ tm._('field_level_help') }}"
            {% else %}
            data-title="{{ tm._(fieldKey ~ '_help_title', td) }}"
            {% endif %}
            data-content="{{ tm._(fieldName ~ '_help', td) }}"
            data-animation="false" data-placement="left" data-trigger="manual" data-html="true"  />
        {% endif %}
    </div>
    {% if tm._(fieldKey ~ '_help', td) != fieldKey ~ '_help' %}
    <span class="hb-icon-info help-trigger"
        {% if tm._(fieldKey ~ '_help_title', td) == fieldKey ~ '_help_title' %}
        data-title="{{ tm._('field_level_help') }}"
        {% else %}
        data-title="{{ tm._(fieldKey ~ '_help_title', td) }}"
        {% endif %}
        data-content="{{ tm._(fieldKey ~ '_help', td) }}"
        data-animation="false" data-placement="left" data-trigger="manual" data-html="true"  />
    {% endif %}
</div>
