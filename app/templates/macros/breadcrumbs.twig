{% macro breadcrumbs(breadcrumbs) %}
    <ul class="breadcrumb">
    {% for crumb in breadcrumbs %}
        {% if not loop.last %}
            <li>
                <a href="{{crumb.link}}" title="{{crumb.info}}" class="{{crumb.icon}}"> {{crumb.text}}</a>
            </li>
            <li>&#x2192;</li>
        {% else %}
            <li class="active" class="{{crumb.icon}}"> {{crumb.text}}</li>
        {% endif %}
    {% endfor %}
    </ul>
{% endmacro %}
