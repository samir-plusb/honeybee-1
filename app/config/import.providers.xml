    xmlns:env="http://berlinonline.de/schemas/honeybee/config/envelope/definition/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0">

    <ae:configuration>
        <providers>

            <provider name="books-csv" class="Honeybee\Core\Import\Provider\CsvProvider">
                <description>Provides data on books abandoned by the nazis.</description>
                <settings>
                    <setting name="filepath">%core.app_dir%/../../../books.csv</setting>
                </settings>
            </provider>

        </providers>
    </ae:configuration>
</ae:configurations>