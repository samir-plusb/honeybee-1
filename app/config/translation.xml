<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0" xmlns="http://agavi.org/agavi/config/parts/translation/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
    <ae:configuration>

        <available_locales default_locale="de_DE">
			<!-- German, Germany -->
            <available_locale identifier="de_DE">
                <ae:parameter name="description">Deutsch</ae:parameter>
            </available_locale>
			<!-- English, United States -->
            <available_locale identifier="en_EN">
                <ae:parameter name="description">English</ae:parameter>
            </available_locale>
        </available_locales>

       <translators default_domain="date_formats">
           <translator domain="date_formats">
                <translator domain="datetime">
                        <date_formatter>
                            <ae:parameters>
                                <ae:parameter name="type">datetime</ae:parameter>
                                <ae:parameter name="format">yyyy-MM-dd HH:mm:ss</ae:parameter>
                            </ae:parameters>
                        </date_formatter>
                </translator>
            </translator>
       </translators>
    </ae:configuration>

    <ae:configuration>

        <translators default_domain="modules.labels">
            <translator domain="modules">
                <message_translator class="AgaviSimpleTranslator">
                     <ae:parameter name="labels">
                        <ae:parameter name="de">
                            <ae:parameter name="brand-name">Honeybee</ae:parameter>
                            <ae:parameter name="brand-title">Honeybee 3.0 - Erato</ae:parameter>
                            <ae:parameter name="Organization">Institutionen</ae:parameter>
                            <ae:parameter name="Person">Personen</ae:parameter>
                            <ae:parameter name="Category">Kategorien</ae:parameter>
                            <ae:parameter name="Edit view">Bearbeitenansicht</ae:parameter>
                            <ae:parameter name="Tree view">Baumansicht</ae:parameter>
                            <ae:parameter name="List view">Listenansicht</ae:parameter>
                            <ae:parameter name="List view (start)">Listenansicht (Anfang)</ae:parameter>
                            <ae:parameter name="Edit">Bearbeiten</ae:parameter>
                            <ae:parameter name="Editing:">Bearbeitung von:</ae:parameter>
                            <ae:parameter name="Page">Seite</ae:parameter>
                            <ae:parameter name="Search for:">Suche nach:</ae:parameter>
                            <ae:parameter name="field_level_help">Feld-Informationen</ae:parameter>
                            <ae:parameter name="group_level_help">Group-Informationen</ae:parameter>
                            <ae:parameter name="Extended Search">Erweiterte Suche</ae:parameter>
                            <ae:parameter name="The document was saved successfully.">Das Dokument wurde erfolgreich gespeichert.</ae:parameter>
                        </ae:parameter>
                        <ae:parameter name="en">
                            <ae:parameter name="brand-name">Honeybee</ae:parameter>
                            <ae:parameter name="brand-title">Honeybee 3.0 - Erato</ae:parameter>
                            <ae:parameter name="Organization">Institutionen</ae:parameter>
                            <ae:parameter name="Person">Personen</ae:parameter>
                            <ae:parameter name="Category">Kategorien</ae:parameter>
                        </ae:parameter>
                    </ae:parameter>
                    <ae:parameter name="list">
                        <ae:parameter name="de">
                            <ae:parameter name="Previous">Zur√ºck</ae:parameter>
                            <ae:parameter name="Next">Vor</ae:parameter>
                        </ae:parameter>
                    </ae:parameter>
                </message_translator>
            </translator>
            <translator domain="user">
                <message_translator class="AgaviSimpleTranslator">
                     <ae:parameter name="roles">
                        <ae:parameter name="de">
                            <ae:parameter name="no-perms">Nutzer ohne Rechte</ae:parameter>
                            <ae:parameter name="honeybee-editor">Nutzer mit allen Rechten (Administrator)</ae:parameter>
                        </ae:parameter>
                    </ae:parameter>
                </message_translator>
            </translator>
        </translators>
        
    </ae:configuration>

    <!-- custom translation.xml files from all project modules -->
    <xi:include href="%core.app_dir%/config/includes/translation.xml" xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.0) xpointer(/ae:configurations/*)">
        <xi:fallback />
    </xi:include>

    <!-- custom project translation.xml that may override everything imported from project modules and honeybee-core -->
    <xi:include href="%core.app_dir%/../../project/app/config/translation.xml" xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.0) xpointer(/ae:configurations/*)">
        <xi:fallback />
    </xi:include>

</ae:configurations>
