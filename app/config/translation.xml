<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1" xmlns="http://agavi.org/agavi/config/parts/translation/1.0" xmlns:xi="http://www.w3.org/2001/XInclude">
    <ae:configuration>
		
        <available_locales default_locale="en_EN">
			<!-- German, Germany -->
            <available_locale identifier="de_DE">
                <ae:parameter name="description">Deutsch</ae:parameter>
            </available_locale>
			<!-- English, United States -->
            <available_locale identifier="en_EN">
                <ae:parameter name="description">English</ae:parameter>
            </available_locale>
        </available_locales>
		
        <translators default_domain="toplevel">
            <translator domain="toplevel">
                <message_translator class="AgaviSimpleTranslator">
                    
                        <!-- Messages are definesd inside the translations/messages.xml -->
                </message_translator>
                                
                <date_formatter>
                    <ae:parameter name="type">date</ae:parameter>
                    <ae:parameter name="format">full</ae:parameter>
                </date_formatter>
				
            </translator>
        </translators>
		
    </ae:configuration>
    
    <xi:include href="%core.config_dir%/translations/messages.xml" 
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>
    
    <xi:include href="%core.module_dir%/Auth/config/translation.xml" 
        xpointer="xmlns(ae=http://agavi.org/agavi/config/global/envelope/1.1) xpointer(/ae:configurations/*)">
    </xi:include>
    
</ae:configurations>