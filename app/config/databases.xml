<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations xmlns="http://agavi.org/agavi/config/parts/databases/1.1" xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.1">

    <ae:configuration>
        <databases default="CouchWorkflow">
            <database name="CouchWorkflow" class="CouchDatabase">
                <ae:parameter name="url">http://127.0.0.1:5984/</ae:parameter>
                <ae:parameter name="database">workflow</ae:parameter>
                <ae:parameter name="setup">WorkflowDatabaseSetup</ae:parameter>
            </database>

            <database name="CouchAssets" class="CouchDatabase">
                <ae:parameter name="url">http://127.0.0.1:5984/</ae:parameter>
                <ae:parameter name="database">assets</ae:parameter>
                <ae:parameter name="setup">AssetDatabaseSetup</ae:parameter>
            </database>

            <database name="EsNews" class="ElasticSearchDatabase">
                <ae:parameter name="host">127.0.0.1</ae:parameter>
                <ae:parameter name="port">9200</ae:parameter>
                <ae:parameter name="transport">Http</ae:parameter>
                <ae:parameter name="index">midas</ae:parameter>
                <ae:parameter name="setup_class">MidasIndexSetup</ae:parameter>
                <ae:parameter name="river">
                    <ae:parameter name="config">workflow_river</ae:parameter>
                    <ae:parameter name="name">workflow_river</ae:parameter>
                    <ae:parameter name="db">workflow</ae:parameter>
                </ae:parameter>
            </database>
        </databases>
    </ae:configuration>

    <ae:configuration environment="testing.*">
        <databases default="CouchWorkflow">
            <database name="CouchWorkflow" class="CouchDatabase">
                <ae:parameter name="url">http://127.0.0.1:5984/</ae:parameter>
                <ae:parameter name="database">workflow_testing</ae:parameter>
                <ae:parameter name="setup">WorkflowDatabaseSetup</ae:parameter>
            </database>

            <database name="CouchAssets" class="CouchDatabase">
                <ae:parameter name="url">http://127.0.0.1:5984/</ae:parameter>
                <ae:parameter name="database">assets_testing</ae:parameter>
                <ae:parameter name="setup">AssetDatabaseSetup</ae:parameter>
            </database>

            <database name="EsNews" class="ElasticSearchDatabase">
                <ae:parameter name="host">127.0.0.1</ae:parameter>
                <ae:parameter name="port">9200</ae:parameter>
                <ae:parameter name="transport">Http</ae:parameter>
                <ae:parameter name="index">midas_testing</ae:parameter>
                <ae:parameter name="setup_class">MidasIndexSetup</ae:parameter>
                <ae:parameter name="river">
                    <ae:parameter name="config">workflow_river</ae:parameter>
                    <ae:parameter name="name">workflow_river_testing</ae:parameter>
                    <ae:parameter name="db">workflow_testing</ae:parameter>
                </ae:parameter>
            </database>

            <!-- For the Import/RunActionTest with the CouchDbDataImport -->
            <database name="CouchImport" class="CouchDatabase">
                <ae:parameter name="url">http://127.0.0.1:5984/</ae:parameter>
                <ae:parameter name="database">midas_import_testing</ae:parameter>
            </database>
        </databases>
    </ae:configuration>

</ae:configurations>
