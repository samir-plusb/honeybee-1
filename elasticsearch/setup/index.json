{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 1
    },
    "mappings" : {
        "ticket" : {
            "_source": {
                "enabled": true
            },
            "dynamic" : false,
            "properties": {
                "blocked": {
                    "type": "boolean",
                    "store": true
                },
                "ts": {
                    "type": "date",
                    "format": "date_time_no_millis",
                    "store": true
                },
                "workflow": {
                    "type": "string",
                    "store": true
                },
                "result": {
                    "type": "object",
                    "dynamic": false,
                    "properties": {
                        "state": {
                            "type": "short",
                            "store": true
                        }
                    }
                }
            }
        },
        "item" : {
            "_parent": {
                "type": "ticket"
            },
            "_source": {
                "enabled": true
            },
            "dynamic" : false,
            "properties" : {
                "ticketId": {
                    "type": "string",
                    "store": true
                },
                "importItem" : {
                    "type": "nested",
                    "properties": {
                        "title": {
                            "type": "string",
                            "store": true
                        },
                        "source" : {
                            "type": "string",
                            "store": true
                        },
                        "origin" : {
                            "type": "string",
                            "store": true
                        },
                        "category" : {
                            "type": "string",
                            "store": true
                        },
                        "content" : {
                            "type": "string",
                            "store": true
                        }
                    }
                },
                "contentItems": {
                    "properties": {
                        "title": {
                            "type": "string",
                            "store": true
                        }
                    }
                }
            }
        }
    }
}
