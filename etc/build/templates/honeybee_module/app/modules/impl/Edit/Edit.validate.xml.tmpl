<?xml version="1.0" encoding="UTF-8"?>
<ae:configurations
    xmlns="http://agavi.org/agavi/config/parts/validators/1.0"
    xmlns:ae="http://agavi.org/agavi/config/global/envelope/1.0"
    parent="%core.module_dir%/%%MODULE_NAME%%/config/validators.xml">
    <ae:configuration>
        <validators method="read">
            <validator class="%%MODULE_NAME%%DocumentValidator" name="invalid_%%MODULE_PREFIX%%" required="false">
                <arguments>
                    <argument>id</argument>
                </arguments>
            </validator>
        </validators>

        <validators method="write" translation_domain="%%MODULE_PREFIX%%.errors">
            <validator class="%%MODULE_NAME%%DocumentValidator" name="invalid_%%MODULE_PREFIX%%" required="false">
                <arguments>
                    <argument>%%MODULE_PREFIX%%</argument>
                </arguments>
                <error for="invalid_values">The value '%value$s' given for field '%fieldname$s' does not comply.</error>
                <error for="missing_mandatory_values">Missing required value for field '%fieldname$s'</error>
            </validator>
        </validators>
    </ae:configuration>
</ae:configurations>